<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isocr.cvas.Fragments.HomeFragment"
    android:background="@drawable/bg2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bienvenido a UCD."
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#4e92d1"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Saludos, para comenzar seleccione la barra de la izquierda o dezlice el dedo de izquierda a derecha y saldran la opciones para elegir lo que necesitas..."
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:textColor="#4e92d1"
            android:textColorHighlight="#88b0d6" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:src="@drawable/desplazarderecha" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
